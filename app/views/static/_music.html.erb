<% if @search.present? %>
  <div class="ui tabular menu">
    <div class="active item" data-tab="artists">Artists</div>
    <div class="item" data-tab="albums">Albums</div>
    <div class="item" data-tab="songs">Songs</div>
  </div>
  <div class="ui tab active" data-tab="artists">
    <h1>Artists</h1>
    <div class="ui cards">
      <% @search["artist"].each do |artist| %>
        <div class="card">
          <!-- Artist image should go here -->
          <div class="content">
            <a class="header"><%= artist.name %></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="ui tab" data-tab="albums">
    <h1>Albums</h1>
    <div class="ui cards">
      <% @search["album"].each do |album| %>
        <div class="card">
          <a class="image">
            <img src="<%= album.images.first["url"] %>">
          </a>
          <div class="content">
            <a class="header"><%= album.name %></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="ui tab" data-tab="songs" id="songs">
    <h1>Songs</h1>
    <div class="ui list">
      <% @search["tracks"].each do |song| %>
        <div class="item">
          <img class="ui avatar image" src="<%= song.album.images.first["url"] %>">
          <div class="content">
            <a class="header"><%= song.name %></a>
            <div class="description"><%= song.album.name %></div>
          </div>
          <iframe src="https://embed.spotify.com/?uri=<%= song.uri%>" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
        </div>
      <% end %>
    </div>
  </div>
<% elsif @search.is_a? Hash %>
  <p>No results found.</p>
<% end %>
