<% if @album.present? %>
  <div class="ui link cards">
    <% @album.results.each do |album| %>
      <div class="card">
        <div class="image">
          <% if album.artwork.present? %>
            <img src="<%= album.artwork %>" alt="" />
          <% end %>
        </div>
        <div class="content">
          <div class="header">
            <%= album.name %>
          </div>
        </div>
        <% if current_user %>
          <div class="extra content">
            <span class="left floated">
              <i class="spotify icon"></i>
            </span>
            <span class="right floated">
              <div class="ui dropdown">
                <i class="sidebar icon"></i>
                <div class="menu">
                  <div class="item">
                    <i class="add circle icon"></i>
                    Add to playlist
                  </div>
                </div>
              </div>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
