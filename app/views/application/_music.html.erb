<% if @search.present? %>
  <h1>Artist</h1>

  <div class="ui link cards gallery">
    <% @search['artist'].results.each do |artist| %>
      <div class="card gallery-item">
        <div class="image">
          <% if artist.image.present? %>
            <img src="<%= artist.image['url'] %>" alt="" />
          <% end %>
        </div>
        <div class="content">
          <div class="header">
            <%= artist.name %>
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            <div class="ui dropdown">
              <i class="sidebar icon"></i>
              <div class="menu">
                <div class="item">
                  <i class="add circle icon"></i>
                  Add to playlist
                </div>
              </div>
            </div>
          </span>
        </div>
      </div>
    <% end %>
    <div class="card gallery-item">
      <div class="image">
        <img src="http://lorempixel.com/400/200/">
      </div>
      <div class="content">
        <div class="header">Matt Giampietro</div>
        <div class="meta">
          <a>Friends</a>
        </div>
        <div class="description">
          Matthew is an interior designer living in New York.
        </div>
      </div>
      <div class="extra content">
        <span class="right floated">
          <div class="ui dropdown">
            <i class="sidebar icon"></i>
            <div class="menu">
              <div class="item">
                <i class="add circle icon"></i>
                Add to playlist
              </div>
            </div>
          </div>
        </span>
        <span>
          <i class="user icon"></i>
          75 Friends
        </span>
      </div>
    </div>
  </div>

  <h1>Song</h1>
  <p>
    <%= @search["tracks"].results %>
  </p>
  <h1>Album</h1>
  <p>
    <%= @search["album"].results %>
  </p>
<% end %>
