<% if @artist.present? %>
  <div class="ui link cards gallery">
    <% @artist.results.each do |artist| %>
      <div class="card gallery-item">
        <div class="image">
          <% if artist.source == 'spotify' %>
            <% if artist.image.present? %>
              <img src="<%= artist.image['url'] %>" alt="" />
            <% end %>
          <% end %>
        </div>
        <div class="content">
          <div class="header">
            <%= link_to artist.name, artist_path(artist.id) %>
          </div>
        </div>
        <% if current_user %>
          <div class="extra content">
            <span class="left floated">
              <% if artist.source == 'spotify' %>
                <i class="spotify icon"></i>
              <% else %>
                <i class="soundcloud icon"></i>
              <% end %>
            </span>
            <span class="right floated">
              <div class="ui dropdown">
                <i class="sidebar icon"></i>
                <div class="menu">
                  <div class="item">
                    <i class="add circle icon"></i>
                    Add to playlist
                  </div>
                </div>
              </div>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
