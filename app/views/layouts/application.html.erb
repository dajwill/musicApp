<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="ui menu">
    <div class="ui grid">
      <div class="four column row">
        <div class="left floated column">
          <div class="item">
            <div class="ui transparent icon input">
              <%= form_tag search_path, method: :get, class: 'ui-search',remote: true do %>
                <%= text_field_tag :query %>
              <% end %>
              <i class="search link icon"></i>
            </div>
          </div>
        </div>
        <div class="right floated column" id="login">
          <% if current_user %>
          	<ul class="collection">
          	  <li class="collection-item"><%= link_to 'Sign Out', logout_path %></li>
          	  <li class="collection-item"><%= link_to 'Playlists', playlists_path %></li>
          	</ul>
          <% else %>
          	<ul class="collection">
          	  <li class="collection-item"><%= link_to 'Login', login_path %></li>
          	  <li class="collection-item"><%= link_to 'Sign Up', signup_path %></li>
          	</ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="ui segment">
    <%= yield %>

    <div id="music">
      <%= render 'music' %>
    </div>
  </div>

</body>
</html>
