<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="ui top fixed menu">
    <div class="ui category search item">
      <div class="ui transparent icon input">
        <!-- <input class="prompt" type="text" placeholder="Search animals..."> -->
        <%= form_tag search_path, method: :get,remote: true do %>
          <%= text_field_tag :query %>
        <% end %>
        <i class="search link icon"></i>
      </div>
      <div class="results"></div>
    </div>
    <div class="right menu">
      <!-- <a class="item">Sign Up</a>
      <a class="item">Help</a> -->
      <% if current_user %>
        <li class="item"><%= link_to 'Sign Out', logout_path %></li>
        <li class="item"><%= link_to 'Playlists', playlists_path %></li>
      <% else %>
          <li class="item"><%= link_to 'Login', login_path %></li>
          <li class="item"><%= link_to 'Sign Up', signup_path %></li>
      <% end %>
    </div>
  </div>

  <div class="ui segment" id="music-results">
    <%= yield %>

    <div id="music">
      <%= render 'music' %>
    </div>
  </div>

</body>
</html>
