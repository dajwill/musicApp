<%= form_tag(sc_search_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @results.present? %>
  <div class="results">
    <% @results.each do |result| %>
      <p><%= result.user.username %></p>
    <% end %>
  </div>
<% end %>